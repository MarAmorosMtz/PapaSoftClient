<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="450.0" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #D1D1D1; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.papasoftclient.controllers.main.ReporteController">
    <children>
        <Label text="Configuración de Reporte" textFill="#002D5A">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Separator style="-fx-background-color: #E0E0E0;" />

        <GridPane hgap="15.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Periodo:" textFill="#4A4A4A" GridPane.rowIndex="2" />
                <ComboBox fx:id="periodSelector" disable="true" maxWidth="1.7976931348623157E308" promptText="Seleccionar periodo" style="-fx-background-color: #F4F4F4; -fx-border-color: #D1D1D1;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Año:" textFill="#4A4A4A" GridPane.rowIndex="3" />

                <Label text="Mes:" textFill="#4A4A4A" GridPane.rowIndex="4" />

                <Label text="Tipo de Reporte:" textFill="#4A4A4A" />
                <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1">
                    <children>
                        <RadioButton fx:id="subjectOption" mnemonicParsing="false" selected="true" text="Carreras">
                     <toggleGroup>
                        <ToggleGroup fx:id="reportTypeTg" />
                     </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="tutorOption" mnemonicParsing="false" text="Asesores" toggleGroup="$reportTypeTg" />
                    </children>
                </HBox>

                <Label text="Periodicidad:" textFill="#4A4A4A" GridPane.rowIndex="1" />
            <ComboBox fx:id="yearSelector" maxWidth="1.7976931348623157E308" promptText="Seleccionar año" style="-fx-background-color: #F4F4F4; -fx-border-color: #D1D1D1;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <ComboBox fx:id="monthSelector" maxWidth="1.7976931348623157E308" promptText="Seleccionar mes" style="-fx-background-color: #F4F4F4; -fx-border-color: #D1D1D1;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <RadioButton fx:id="monthlyOption" mnemonicParsing="false" onAction="#handlePeriodicitySelection" selected="true" text="Mensual">
                     <toggleGroup>
                        <ToggleGroup fx:id="periodicityTg" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="biannualOption" mnemonicParsing="false" onAction="#handlePeriodicitySelection" text="Semestral" toggleGroup="$periodicityTg" />
                  <RadioButton fx:id="totalOption" mnemonicParsing="false" onAction="#handlePeriodicitySelection" text="Total" toggleGroup="$periodicityTg" />
               </children>
            </HBox>
            </children>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <children>
                <Button mnemonicParsing="false" prefWidth="100.0" style="-fx-background-color: #EEEEEE; -fx-text-fill: #4A4A4A; -fx-cursor: hand;" text="Cancelar" visible="false" />
                <Button fx:id="generateReportButton" mnemonicParsing="false" onAction="#generateReport" prefWidth="140.0" style="-fx-background-color: #002D5A; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Generar Reporte" />
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
</VBox>
